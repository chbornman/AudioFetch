# Audio Downloader Environment Variables Example
# Copy this file to .env and update with your values

# Admin password for server-side downloads
ADMIN_PASSWORD=your-secure-password-here

# Secret key for JWT tokens (generate a strong random key for production)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Token expiration time in minutes (default: 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Port configuration
PORT=8000

# Host configuration
HOST=0.0.0.0

# Docker-specific configurations
# Downloads directory on host machine (change to your preferred path)
# Examples:
# - /home/username/audiobooks
# - /mnt/storage/audio
# - /Volumes/NAS/audiobooks
DOWNLOADS_HOST_PATH=./downloads

# Downloads directory inside container (usually don't change this)
DOWNLOADS_CONTAINER_PATH=/app/downloads

# Python unbuffered output (for Docker logs)
PYTHONUNBUFFERED=1

# Uvicorn log level (debug, info, warning, error, critical)
LOG_LEVEL=info

# Uvicorn reload (set to false in production)
AUTO_RELOAD=true